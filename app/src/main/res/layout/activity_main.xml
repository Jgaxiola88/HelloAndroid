<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/ImageView_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/udacity"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/TextView_layout"
        android:layout_below="@id/ImageView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/udacity_TextView"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Udacity"
            android:layout_margin="8dp"/>
"/>
        <TextView
            android:id="@+id/address_TextView"
            android:layout_below="@id/udacity_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="2465 Latham St"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/city_TextView"
            android:layout_below="@id/address_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Mountain View, CA 94043"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/number_TextView"
            android:layout_below="@id/city_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="(650) 555-5555"
            android:layout_margin="8dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="0"
        android:id="@+id/footer_layout"
        android:layout_below="@id/TextView_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/website_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="www.udacity.com"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/contact_TextView"
            android:layout_toRightOf="@id/website_TextView"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Contact Us"
            />

    </RelativeLayout>
</RelativeLayout>

